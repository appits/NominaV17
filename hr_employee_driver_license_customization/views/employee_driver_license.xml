<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Employee driver license -->
        <record id="hr_employee_driver_lincese_tree" model="ir.ui.view">
            <field name="name">hr.employee.driver.lincese.tree</field>
            <field name="model">hr_employee_driver_license</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="type_of_drivers_license" />
                </tree>
            </field>
        </record>

        <record id="hr_employee_driver_lincese_form" model="ir.ui.view">
            <field name="name">hr.employee.driver.lincese.form</field>
            <field name="model">hr_employee_driver_license</field>
            <field name="arch" type="xml">
                <form string="Employee Drive License">
                    <header>
                    </header>
                    <sheet>
                        <group name="group_top" string="Employee Drive License">
                            <group name="group_left" style="width:50%;">
                                <field name="name" required="True" />
                                <field name="type_of_drivers_license"/>
                            </group>
                            
                            <group name="group_right" style="width:50%;">
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>