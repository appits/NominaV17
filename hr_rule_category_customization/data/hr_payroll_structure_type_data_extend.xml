<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <!--Weekly-->
        <record id="hr_payroll_structure_type_weekly" model="hr.payroll.structure.type">
            <field name="name">Nómina semanal</field>
            <field name="default_schedule_pay">weekly</field>
            <field name="wage_type">hourly</field>
            <field name="country_id" ref="base.ve" />
        </record>

        <!--Monthly payroll-->
        <record id="hr_payroll_structure_type_monthly" model="hr.payroll.structure.type">
            <field name="name">Nómina mensual</field>
            <field name="default_schedule_pay">monthly</field>
            <field name="wage_type">monthly</field>
            <field name="country_id" ref="base.ve" />
        </record>

        <!--Confidential payroll-->
        <record id="hr_payroll_structure_type_confidential_payroll" model="hr.payroll.structure.type">
            <field name="name">Nómina confidencial</field>
            <field name="default_schedule_pay">bi-weekly</field>
            <field name="wage_type">monthly</field>
            <field name="country_id" ref="base.ve" />
        </record>
    </data>
</odoo>